<% if @company.name != 'Company name'%>
  <h1>PÃ¡gina da <%= @company.name %></h1>
<% end %>

<% if employee_signed_in? && current_employee.company_id == @company.id %>
  <%= link_to 'Edit', edit_company_path %>
<% end %>

<%= @company.name %>
<%= @company.address %>
<%= @company.cnpj %>
<%= @company.site %>
<%= @company.social_media %>

<% if @company.logo.attached? %>
  <%= image_tag @company.logo %>
<% end %>


<h3>Jobs opportunities</h3>
<% if employee_signed_in? && current_employee.admin == 1 && current_employee.company_id == @company.id%>
  <%= link_to 'Register a job opportunity', new_company_job_path(@company) %>
<% end %>

<% if @company.jobs.empty? %>
  <h4>No registered jobs </h4>
<% else %>
  <% @company.jobs.each do |job| %>
    <%= link_to job.title, company_job_path(job.company, job) %>
    <% if job.inactive? %>
      <span>is <%= job.status %></span>
    <% end %>
  <% end %>
<% end %>