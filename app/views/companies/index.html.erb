<div class="container index">

  <h2 class="index__title">Index Companies</h2>

  <% if @companies.empty?%>
    <h4 class="index__none">None company registered </h4>
  <% else %>
    <% @companies.each do |company| %>
      <div class="index__list">
        <div class="index__item">
          <p class="index__label">Company:</p>
          <%= link_to company.name, company_path(company), class: "index__attribute link" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>