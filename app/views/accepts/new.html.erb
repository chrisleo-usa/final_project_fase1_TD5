<div class="container create">
  <h2 class="create__title">Accept proposal</h2>

  <% if @accept.errors.any? %>
    <div class="warnings">
      <%= I18n.t("errors.template.body")%>
      <ul>
        <% @accept.errors.full_messages.each do |m| %>
          <li class="alert"><%= m %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <%= form_with model: [@proposal, @accept], html: { class: 'create__form'} do |f| %>

    <div class="create__block">
      <%= f.label :start_date, 'Start date', class: "create__label" %> <br>
      <%= f.date_field :start_date, class: "create__field" %>
    </div>

    <%= f.submit 'Send', class: "create__btn" %>
  <% end %>
</div>
