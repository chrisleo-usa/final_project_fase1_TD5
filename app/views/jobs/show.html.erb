<h1>Show de Job Opportunity</h1> 

<h3><%= @job.title %></h3>
<% if employee_signed_in? %>
  <% if current_employee.company_id === @job.company.id %>
    <% if @job.active?%>
      <%= link_to 'Disable job', disable_company_job_path(@job.company, @job), method: :post %>
    <% end %>
    <%= link_to 'Edit', edit_company_job_path(@job.company, @job) %>
  <% end %>
<% else %>
  <%= link_to 'Apply for this job', apply_company_job_path(@job.company, @job), method: :post %>
<% end %>


<%= @job.description %>
<%= @job.salary_range %>
<%= @job.level %>
<%= @job.requirements %>
<%= @job.deadline_application.strftime("%d/%m/%Y") %>
<%= @job.total_vacancies %>


<% if @job.enrollments.empty? %>
  <h4>None enrollments yet</h4>
<% else %>
  <h4>Enrollments received:</h4>

  <% @enrollments.each do |enrollment|%>
    <%= link_to enrollment.candidate.name, candidate_path(enrollment.candidate) %>
  <% end %>

<% end %>