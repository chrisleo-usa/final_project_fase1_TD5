<div class="content bg-gradient">
  <div class="container ">
    <div class="create">
      <h2 class="create__title">Cadastrar</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "create__form"}) do |f| %>
        <%= render "employees/shared/error_messages", resource: resource %>

        <div class="field create__block">
          <%= f.label :email, class: "create__label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "create__field" %>
        </div>

        <div class="field create__block">
          <%= f.label :password, class: "create__label" %>
          <% if @minimum_password_length %>
          <em>(mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "create__field" %>
        </div>

        <div class="field create__block">
          <%= f.label :password_confirmation, class: "create__label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "create__field" %>
        </div>

        <div class="actions">
          <%= f.submit "Salvar", class: "btn btn__secondary" %>
        </div>
      <% end %>

      <%= render "employees/shared/links" %>
    </div>
  </div>
</div>