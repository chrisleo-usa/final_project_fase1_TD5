<div class="container log_in">
  <h2 class="log_in__title">Entrar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "log_in__form"}) do |f| %>
    <div class="field log_in__block">
      <%= f.label :email, class: "log_in__label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "log_in__field" %>
    </div>

    <div class="field log_in__block">
      <%= f.label :password, class: "log_in__label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "log_in__field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field log_in__block">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "log_in__label" %>
      </div>
    <% end %>

    <div class="actions log_in__action">
      <%= f.submit "Entrar", class: "log_in__btn" %>
    </div>
  <% end %>

  <%= render "employees/shared/links" %>
</div>
