<div class="container create">
  <h2 class="create__title">Criar proposta</h2>

  <% if @proposal.errors.any? %>
    <div class="warnings">
      <%= I18n.t("errors.template.body")%>
      <ul>
        <% @proposal.errors.full_messages.each do |m| %>
          <li class="alert"><%= m %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <%= form_with model: [@enrollment, @proposal], html: { class: 'create__form'} do |f| %>

    <div class="create__block">
      <%= f.label :proposal_message, class: "create__label" %> <br>
      <%= f.text_field :proposal_message, class: "create__field" %>
    </div>

    <div class="create__block">
      <%= f.label :proposal_salary, class: "create__label" %> <br>
      <%= f.number_field :proposal_salary, class: "create__field" %>
    </div>

    <div class="create__block">
      <%= f.label :start_date, class: "create__label" %> <br>
      <%= f.date_field :start_date, class: "create__field" %>
    </div>

    <%= f.submit 'Enviar', class: "create__btn" %>
  <% end %>
</div>
